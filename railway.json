{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "npm install"
    },
    "deploy": {
      "numReplicas": 1,
      "cronSchedule": "0 * * * *",
      "startCommand": "npm start",
      "sleepApplication": false,
      "restartPolicyType": "NEVER"
    }
  }